<div class="container">
    <h1 class="bg-white">Click on the movie to show showtimes!</h1>
    <div class="row ">
    {{#each movies}}
        <div class="col-sm-6 col-md-6 col-lg-3 mb-3">
            <div class="card h-100" >
                <img src="{{this.image}}" class="card-img-top img-thumbnail oversize" alt="movie image">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title mb-5">{{this.title}}</h5>
                    <a href="/movie/{{this._id}}" class="btn btn-primary mt-auto ms-auto">See more</a>
                </div>
            </div>
        </div>
    {{/each}}
    </div>
</div>
